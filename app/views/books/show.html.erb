	<div class="col-xs-3">
		<%= render 'users/profile',user: @user %>
		<%= render 'books/newform',book: @books %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
				<tr>
					<td>
						 <%= link_to user_path(@book.user) do %>
                         <%= attachment_image_tag @book.user, :profile_image, format: "jpeg", fallback: "no_image.jpg", size: "100x100" %>
                         <%= @book.user.name %>
                         <% end %>
					</td>
					<td><%= link_to @book.title, @book %></td>
					<td><%= @book.body %></td>

					<td>
					<!--favorited_by? 追加-->
					<%= render 'books/favorite', book: @book %>

					<td>
					    <%= @book.book_comments.count %> コメント
				    </td>
				    <td>
				    	<% @book_comments.each do |book_comment| %>
				    </td>
				    <tr>

                       <td><%= book_comment.comment %></td>

                       <% if book_comment.user == current_user %>
					   <td><%= button_to "Destroy",book_book_comments_path(@book.id), {method: :delete, remote: true, class: "btn-sm btn-danger destroy_book_#{@book.id}",params:{comment_id: book_comment.id}} %></td>
				       <% end %>

                    </tr>
                    <% end %>

                  <%= render 'books/book_comment', book: @book, book_comment: @book_comment %>

				</tr>
			</table>

	</div>


