<div class="col-xs-3">
		<%= render 'users/profile', user: current_user %>
		<!--メモ　右側の指定に注意。そこを間違えるとエラーが発生して表示されない -->

		<%= render 'books/newform', book: @book %>

</div>


<div class="col-xs-9">
		<table class="table">

			<tbody>

            <% if @model == "book" %>
               <thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
					<th colspan="3"></th>
				</tr>
			   </thead>
				<% @records.each do |record| %>
				<tr>
					<td>
						<%= link_to(record.user) do %>

						<%= attachment_image_tag record.user, :profile_image, format: "jpeg", fallback: "no_image.jpg", size: "100x100" %>
						<% end %>
					</td>
					<td><%= record.title %></td>
					<td><%= record.body %></td>
				</tr>
				<% end %>

			<% else @model == "user" %>
			   <thead>
				 <tr>

					<th>image</th>
					<th>name</th>
					<th colspan="3"></th>
				 </tr>
   			   </thead>

			    <% @records.each do |record| %>
				<tr>
					<td>
						<%= link_to(record) do %>

						<%= attachment_image_tag record, :profile_image, format: "jpeg", fallback: "no_image.jpg", size: "100x100" %>
						<% end %>
					</td>
					<td><%= record.name %></td>
					<td><%= record.introduction %></td>
					<td><%= link_to "Show", (record) %>
				</tr>
				<% end %>
            <% end %>

            </tbody>
		</table>
</div>
